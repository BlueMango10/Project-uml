@startuml AddCollaborator
!theme plain
actor ProjectOwner as po
boundary AddCollaboratorButton as acb
control AddCollaboratorControl as acc
boundary AddCollaboratorForm as acf
entity Project as p

activate po

po -> acb : press()
activate acb

create acc
acb --> acc : <<create>>
deactivate acb
activate acc

create acf
acc --> acf : <<create>>
deactivate acc

po -> acf : fillContents()
activate acf
deactivate acf

po -> acf : submit()
activate acf

acf -> acc : submitForm()
deactivate acf
destroy acf
activate acc

acc -> p : addCollaborator()
deactivate acc
destroy acc
activate p
deactivate p
@enduml