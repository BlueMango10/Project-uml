@startuml CreateProject
!theme plain
actor ProjectOwner as po
boundary ControlProjectButton as cpb
control CreateProjectControl as cpc
boundary CreateProjectForm as cpf
entity Project as p
database ProjectDatabase as pd

activate po

po -> cpb : press()
activate cpb

create cpc
cpb --> cpc : <<create>>
deactivate cpb
activate cpc

create cpf
cpc --> cpf : <<create>>
deactivate cpc

po -> cpf : fillContents()
activate cpf
deactivate cpf

po -> cpf : submit()
activate cpf

cpf -> cpc : submitForm()
destroy cpf
activate cpc

create p
cpc --> p : <<create>>
destroy cpc
activate p

p -> pd : add()
deactivate p
activate pd
deactivate pd
@enduml  
